//arrays: insert element after a position 

#include <iostream>

using namespace std;

int main()
{
    int i;
    int pos=2;
    int ele = 25;
    int arr[6] = {1,2,8,6,7};
    for(i=5;i>pos-1;i--)
    {
        arr[i+1]=arr[i];
    }
    arr[i+1] = ele;

    for(int x:arr)
    {
        cout<<x<<" ";

    }
    return 0;
}
