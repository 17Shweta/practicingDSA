
//array: finding last occurence of an element


#include <iostream>
#include <bits/stdc++.h>
using namespace std;

int main()
{
	int N,M;
	cin >> N;
	cin >> M;
	int arr[N];
	int i;
	for(i=0;i<N;i++)
	{
		cin>>arr[i];
	}							
    for(i=N;i>=0;i--)
	{
      if(arr[i]==M)
      {
	   cout<<i+1;
	   break;
      }
	}
	if(arr[i]!=M) 
	  cout<<"-1";
    
}	

output
5 1                                                                                                                                           
1 2 3 4 1                                                                                                                                     
5
